extends layout 

block content

    div(style='margin-left:20px;margin-top:20px')

    h1 ID: #{id}

    p #[strong Title:]
        a(href=url) #{name}
    p #[strong Imprint:] #{imprint}

    p #[strong Status:]
        if status=='Available'
            span.text-success #{status}
        else if status=='Maintenance'
            span.text-danger #{status}
        else
            span.text-warning #{status}

    p Do you really want to delete this book instance?




    form(method='POST' action='')
      div.form-group
        input#bookinstance.form-control(type='hidden',name='bookinstance', required='true', value=id )

      button.btn.btn-primary(type='submit') Delete